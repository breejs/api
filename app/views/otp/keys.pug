
extends ../layout

block body
  .container.py-3
    .row
      .col-xs-12.col-sm-12.col-md-6.offset-md-3.col-lg-6.offset-lg-3.text-center
        h1.my-3.py-3= t('Recovery Key')
        form(action=ctx.path, method="POST", autocomplete="off").ajax-form
          input(type="hidden", name="_csrf", value=ctx.csrf)
          .form-group.floating-label
            input#input-text.form-control.form-control-lg(type="text", autofocus, required, autocomplete="off", name="recovery_key", placeholder=' ')
            label(for="recovery_key")= t('Recovery Key')
          button.btn.btn-primary.btn-block.btn-lg(type="submit")= t('Continue')
