{
  "name": "@breejs/api",
  "description": "An API for Bree.",
  "version": "1.0.2",
  "author": "shadowgate15 <taylorschley@me.com> (https://github.com/shadowgate15)",
  "ava": {
    "files": [
      "test/*.js",
      "test/**/*.js",
      "!test/jobs",
      "!test/utils.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/breejs/api/issues",
    "email": "taylorschley@me.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@koa/router": "^10.0.0",
    "@ladjs/api": "^6.0.0",
    "@ladjs/env": "^3.0.0",
    "@ladjs/graceful": "^1.1.5",
    "@ladjs/shared-config": "^4.0.0",
    "@slack/web-api": "^6.0.0",
    "axe": "^8.0.0",
    "crypto-random-string": "^3.3.1",
    "del": "^6.0.0",
    "humanize-string": "^2.1.0",
    "ip": "^1.1.5",
    "koa-jwt": "^4.0.1",
    "lodash": "^4.17.20",
    "markdown-it": "^12.0.4",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-github-headings": "^2.0.0",
    "markdown-it-highlightjs": "^3.4.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "pino": "^6.11.1",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ava": "^3.15.0",
    "bree": "^6.3.0",
    "codecov": "^3.8.1",
    "delay": "^5.0.0",
    "eslint": "^7.19.0",
    "eslint-config-xo-lass": "^1.0.5",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-no-smart-quotes": "^1.1.0",
    "fixpack": "^4.0.0",
    "get-port": "^5.1.1",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-livereload": "^4.0.2",
    "gulp-remark": "^9.0.0",
    "gulp-xo": "^0.25.0",
    "husky": "^5.0.9",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "10.5.4",
    "make-dir": "^3.1.0",
    "ms": "^2.1.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0",
    "nyc": "^15.1.0",
    "parse-git-config": "^3.0.0",
    "rc": "^1.2.8",
    "remark-cli": "^9.0.0",
    "remark-preset-github": "^4.0.1",
    "supertest": "^6.1.3",
    "xo": "^0.37.1"
  },
  "engines": {
    "node": ">=12.11.0"
  },
  "homepage": "https://github.com/breejs/api",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "api",
    "bree",
    "lad",
    "lass"
  ],
  "license": "Unlicensed",
  "main": "index.js",
  "nodemonConfig": {
    "ignore": [
      "build/**",
      "assets/**",
      "test/**"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "publishConfig": {
    "access": "public"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breejs/api"
  },
  "scripts": {
    "build": "nps build",
    "coverage": "nps coverage",
    "lint": "nps lint",
    "prepare": "husky install",
    "pretest": "nps pretest",
    "start": "nps",
    "test": "nps test",
    "test-coverage": "nps test-coverage",
    "watch": "nps watch"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "overrides": [
      {
        "files": [
          "assets/js/*.js",
          "assets/js/**/*.js"
        ],
        "envs": [
          "browser"
        ],
        "plugins": [
          "compat",
          "no-smart-quotes"
        ],
        "rules": {
          "compat/compat": "error",
          "no-smart-quotes/no-smart-quotes": "error"
        }
      }
    ],
    "rules": {
      "ava/assertion-arguments": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "import/extensions": "off",
      "capitalized-comments": "off",
      "unicorn/catch-error-name": "off"
    }
  }
}
